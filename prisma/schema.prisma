// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  name String
  price String
  brand String
  model String
  description String
  image String?
  category Categories[]
  createAdt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users User[] @relation("ProductUser")

  @@map("product")
}

model Categories {
  id String @id @default(uuid())
  title String
  productId String?
  product Product? @relation(fields: [productId], references: [id])

  @@map("categories")
}


model User {
  id String   @id @default(uuid())
  name String
  email String   @unique
  password String
  createAdt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products Product[] @relation("ProductUser")
}


model Admin {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  isAdmin Boolean
  createAdt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin")
}


